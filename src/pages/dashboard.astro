---
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Dashboard"
    description="Your Criminas dashboard"
    activePage="dashboard"
>
    <div id="alertContainer" class="alert-container"></div>

    <section class="page-hero">
        <div class="page-hero-content fade-up">
            <h1>Dashboard</h1>
            <p id="welcomeMessage">Welcome back!</p>
        </div>
    </section>

    <section class="section">
        <div class="section-container">
            <div class="dashboard-grid">
                <!-- User Profile Card -->
                <div class="dashboard-card profile-card">
                    <div class="card-header">
                        <h2>Profile</h2>
                        <a href="#" id="editProfile" class="text-link">Edit</a>
                    </div>
                    <div class="profile-content" id="profileContent">
                        <div class="profile-avatar" id="profileAvatar"></div>
                        <div class="profile-info">
                            <h3 id="profileName">Loading...</h3>
                            <p id="profileEmail"></p>
                        </div>
                    </div>
                    <div class="profile-edit-form" id="profileEditForm" style="display: none;">
                        <div class="form-group">
                            <label for="editName">Name</label>
                            <input type="text" id="editName" />
                        </div>
                        <div class="form-actions">
                            <button class="btn-primary" id="saveProfile">Save</button>
                            <button class="btn-secondary" id="cancelEdit">Cancel</button>
                        </div>
                    </div>
                </div>

                <!-- Starred Projects Card -->
                <div class="dashboard-card starred-card">
                    <div class="card-header">
                        <h2>Starred Projects</h2>
                        <a href="/projects" class="text-link">Browse All</a>
                    </div>
                    <div id="starredProjects" class="starred-list">
                        <div class="loading">Loading starred projects...</div>
                    </div>
                </div>

                <!-- Quick Actions Card -->
                <div class="dashboard-card actions-card">
                    <div class="card-header">
                        <h2>Quick Actions</h2>
                    </div>
                    <div class="actions-grid">
                        <a href="/projects" class="action-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                            </svg>
                            <div>
                                <h3>Explore Projects</h3>
                                <p>Discover open source tools</p>
                            </div>
                        </a>
                        <a href="https://github.com/criminas" target="_blank" rel="noopener noreferrer" class="action-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            <div>
                                <h3>View on GitHub</h3>
                                <p>See all repositories</p>
                            </div>
                        </a>
                        <a href="/contact" class="action-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                            </svg>
                            <div>
                                <h3>Get in Touch</h3>
                                <p>Contact the team</p>
                            </div>
                        </a>
                        <button class="action-item sign-out-action" id="signOutAction">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                <polyline points="16 17 21 12 16 7"></polyline>
                                <line x1="21" y1="12" x2="9" y2="12"></line>
                            </svg>
                            <div>
                                <h3>Sign Out</h3>
                                <p>Leave your session</p>
                            </div>
                        </button>
                        <button class="action-item delete-account-action" id="deleteAccountAction">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                <line x1="14" y1="11" x2="14" y2="17"></line>
                            </svg>
                            <div>
                                <h3>Delete Account</h3>
                                <p>Permanently remove account</p>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script>
    import { api } from "../../convex/_generated/api";

    let convex: any = null;
    let currentUser: any = null;

    function waitForConvex(): Promise<any> {
        return new Promise((resolve) => {
            const check = () => {
                const c = (window as any).__convex;
                if (c) {
                    resolve(c);
                } else {
                    setTimeout(check, 50);
                }
            };
            check();
        });
    }

    async function loadDashboard() {
        try {
            convex = await waitForConvex();
            
            // Check authentication
            currentUser = await convex.query(api.users.current);
            
            if (!currentUser) {
                window.location.href = '/login';
                return;
            }

            // Update welcome message
            const welcomeMsg = document.getElementById('welcomeMessage');
            if (welcomeMsg) {
                welcomeMsg.textContent = `Welcome back, ${currentUser.name || 'there'}!`;
            }

            // Update profile card
            updateProfileCard();

            // Load starred projects
            loadStarredProjects();
        } catch (error) {
            console.error('Error loading dashboard:', error);
            window.location.href = '/login';
        }
    }

    function updateProfileCard() {
        if (!currentUser) return;

        const avatar = document.getElementById('profileAvatar');
        const name = document.getElementById('profileName');
        const email = document.getElementById('profileEmail');

        if (avatar) {
            if (currentUser.image) {
                avatar.innerHTML = `<img src="${currentUser.image}" alt="${currentUser.name || 'User'}" />`;
            } else {
                avatar.innerHTML = `<span>${(currentUser.name || currentUser.email || 'U')[0].toUpperCase()}</span>`;
            }
        }

        if (name) name.textContent = currentUser.name || 'User';
        if (email) email.textContent = currentUser.email || '';
    }

    async function loadStarredProjects() {
        const container = document.getElementById('starredProjects');
        if (!container) return;

        try {
            const starred = await convex.query(api.users.getStarredProjects);

            if (starred.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <p>No starred projects yet</p>
                        <a href="/projects" class="btn-secondary">Browse Projects</a>
                    </div>
                `;
                return;
            }

            container.innerHTML = starred.slice(0, 5).map((project: any) => `
                <div class="starred-item">
                    <div class="starred-info">
                        <h4>${escapeHtml(project.projectName)}</h4>
                        <p class="starred-date">${formatDate(project.starredAt)}</p>
                    </div>
                    <button class="unstar-btn" data-project-id="${escapeHtml(project.projectId)}">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2">
                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                        </svg>
                    </button>
                </div>
            `).join('');

            // Add unstar listeners
            document.querySelectorAll('.unstar-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    const projectId = (e.currentTarget as HTMLButtonElement).dataset.projectId;
                    if (projectId) {
                        await convex.mutation(api.users.starProject, { 
                            projectId,
                            projectName: ''
                        });
                        loadStarredProjects();
                    }
                });
            });
        } catch (error) {
            console.error('Error loading starred projects:', error);
            container.innerHTML = '<div class="error">Failed to load projects</div>';
        }
    }

    function escapeHtml(text: string): string {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    function formatDate(timestamp: number): string {
        const date = new Date(timestamp);
        const now = new Date();
        const diff = now.getTime() - date.getTime();
        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        
        if (days === 0) return 'starred today';
        if (days === 1) return 'starred yesterday';
        if (days < 7) return `starred ${days} days ago`;
        return `starred ${date.toLocaleDateString()}`;
    }

    // Profile edit functionality
    document.getElementById('editProfile')?.addEventListener('click', (e) => {
        e.preventDefault();
        const content = document.getElementById('profileContent');
        const form = document.getElementById('profileEditForm');
        const editName = document.getElementById('editName') as HTMLInputElement;
        
        if (content && form && editName) {
            content.style.display = 'none';
            form.style.display = 'block';
            editName.value = currentUser?.name || '';
        }
    });

    document.getElementById('cancelEdit')?.addEventListener('click', () => {
        const content = document.getElementById('profileContent');
        const form = document.getElementById('profileEditForm');
        
        if (content && form) {
            content.style.display = 'flex';
            form.style.display = 'none';
        }
    });

    document.getElementById('saveProfile')?.addEventListener('click', async () => {
        const editName = document.getElementById('editName') as HTMLInputElement;
        const name = editName?.value;
        
        if (name) {
            try {
                await convex.mutation(api.users.updateProfile, { name });
                currentUser.name = name;
                updateProfileCard();
                
                const content = document.getElementById('profileContent');
                const form = document.getElementById('profileEditForm');
                
                if (content && form) {
                    content.style.display = 'flex';
                    form.style.display = 'none';
                }
            } catch (error) {
                console.error('Error updating profile:', error);
                showAlert('Failed to update profile. Please try again.', 'error');
            }
        }
    });

    // Sign out
    document.getElementById('signOutAction')?.addEventListener('click', async () => {
        try {
            if (convex) {
                await convex.action(api.auth.signOut);
            }
            // Clear stored auth token
            localStorage.removeItem('convex_auth_token');
            window.location.href = '/';
        } catch (error) {
            console.error('Error signing out:', error);
            localStorage.removeItem('convex_auth_token');
            window.location.href = '/';
        }
    });

    // Delete account
    document.getElementById('deleteAccountAction')?.addEventListener('click', async () => {
        try {
            if (convex) {
                await convex.mutation(api.users.deleteAccount, {});
                showAlert('Account deleted successfully. Redirecting...', 'success');
                setTimeout(() => {
                    localStorage.removeItem('convex_auth_token');
                    window.location.href = '/';
                }, 1500);
            }
        } catch (error) {
            console.error('Error deleting account:', error);
            showAlert('Failed to delete account. Please try again.', 'error');
        }
    });

    function showAlert(message: string, type: 'success' | 'error') {
        const alertContainer = document.getElementById('alertContainer');
        if (!alertContainer) return;

        const alert = document.createElement('div');
        alert.className = `alert alert-${type}`;
        alert.textContent = message;
        
        alertContainer.appendChild(alert);
        
        setTimeout(() => {
            alert.classList.add('fade-out');
            setTimeout(() => alert.remove(), 300);
        }, 3000);
    }

    // Load dashboard on page load
    loadDashboard();
</script>

<style>
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
    }

    .dashboard-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 24px;
    }

    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 24px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--border);
    }

    .card-header h2 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .text-link {
        font-size: 0.875rem;
        color: var(--accent);
        text-decoration: none;
        font-weight: 500;
    }

    .text-link:hover {
        text-decoration: underline;
    }

    /* Profile Card */
    .profile-card {
        grid-column: 1 / -1;
    }

    .profile-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: var(--accent-light);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .profile-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-avatar span {
        font-size: 2rem;
        font-weight: 600;
        color: var(--accent);
    }

    .profile-info h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .profile-info p {
        color: var(--text-secondary);
    }

    .profile-edit-form {
        max-width: 400px;
    }

    .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 16px;
    }

    /* Starred Projects Card */
    .starred-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .starred-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px;
        background: var(--bg-primary);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        transition: all 0.15s ease;
    }

    .starred-item:hover {
        border-color: var(--accent);
    }

    .starred-info h4 {
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 2px;
    }

    .starred-date {
        font-size: 0.8125rem;
        color: var(--text-tertiary);
    }

    .unstar-btn {
        padding: 6px;
        background: transparent;
        border: none;
        color: var(--accent);
        cursor: pointer;
        border-radius: var(--radius);
        transition: all 0.15s ease;
    }

    .unstar-btn:hover {
        background: var(--accent-light);
    }

    /* Quick Actions Card */
    .actions-card {
        grid-column: 1 / -1;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
    }

    .action-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        padding: 16px;
        background: var(--bg-primary);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        text-decoration: none;
        transition: all 0.15s ease;
        cursor: pointer;
    }

    .action-item:hover {
        border-color: var(--accent);
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }

    .action-item svg {
        flex-shrink: 0;
        color: var(--accent);
        margin-top: 2px;
    }

    .action-item h3 {
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 2px;
    }

    .action-item p {
        font-size: 0.8125rem;
        color: var(--text-secondary);
    }

    .sign-out-action {
        background: transparent;
        border-color: var(--border);
        text-align: left;
        width: 100%;
    }

    .sign-out-action:hover {
        border-color: var(--error);
    }

    .sign-out-action svg {
        color: var(--error);
    }

    .delete-account-action {
        background: transparent;
        border-color: var(--border);
        text-align: left;
        width: 100%;
    }

    .delete-account-action:hover {
        border-color: var(--error);
    }

    .delete-account-action svg {
        color: var(--error);
    }

    .loading,
    .empty-state {
        text-align: center;
        padding: 32px;
        color: var(--text-secondary);
    }

    .empty-state p {
        margin-bottom: 16px;
    }

    .alert-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .alert {
        padding: 12px 16px;
        border-radius: var(--radius-md);
        font-size: 0.9375rem;
        font-weight: 500;
        animation: slideIn 0.3s ease;
    }

    .alert-success {
        background: #10b981;
        color: white;
        border: 1px solid #059669;
    }

    .alert-error {
        background: #ef4444;
        color: white;
        border: 1px solid #dc2626;
    }

    .alert.fade-out {
        animation: slideOut 0.3s ease;
    }

    @keyframes slideIn {
        from {
            transform: translateX(400px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @keyframes slideOut {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(400px);
            opacity: 0;
        }
    }

    @media (max-width: 768px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }

        .actions-grid {
            grid-template-columns: 1fr;
        }

        .profile-content {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .alert-container {
            right: 10px;
            left: 10px;
        }

        .alert {
            font-size: 0.875rem;
        }
    }
</style>
