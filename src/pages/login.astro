---
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Sign In"
    description="Sign in to your Criminas account"
    activePage="login"
>
    <section class="auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-header">
                    <h1>Welcome back</h1>
                    <p>Sign in to your account to continue</p>
                </div>

                <form class="auth-form" id="loginForm">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required placeholder="you@example.com" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required placeholder="••••••••" />
                    </div>
                    <div id="errorMessage" class="error-message" style="display: none;"></div>
                    <button type="submit" class="btn-primary btn-block" id="submitBtn">Sign In</button>
                </form>

                <div class="auth-footer">
                    <p>Don't have an account? <a href="/register">Sign up</a></p>
                </div>
            </div>

            <div class="auth-benefits">
                <h2>Why join Criminas?</h2>
                <ul class="benefits-list">
                    <li>
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <div>
                            <h3>Access Open Source Projects</h3>
                            <p>Explore and contribute to our collection of developer tools</p>
                        </div>
                    </li>
                    <li>
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <div>
                            <h3>Star Your Favorites</h3>
                            <p>Keep track of projects you love and want to follow</p>
                        </div>
                    </li>
                    <li>
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <div>
                            <h3>Join the Community</h3>
                            <p>Connect with developers and contribute to open source</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</Layout>

<script>
    import { api } from "../../convex/_generated/api";

    const form = document.getElementById('loginForm') as HTMLFormElement;
    const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

    function waitForConvex(): Promise<any> {
        return new Promise((resolve) => {
            const check = () => {
                const convex = (window as any).__convex;
                if (convex) {
                    resolve(convex);
                } else {
                    setTimeout(check, 50);
                }
            };
            check();
        });
    }
    
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const email = formData.get('email') as string;
        const password = formData.get('password') as string;

        errorMessage.style.display = 'none';
        submitBtn.disabled = true;
        submitBtn.textContent = 'Signing in...';

        try {
            const convex = await waitForConvex();

            // Sign in with email and password using the signIn action
            const result = await convex.action(api.auth.signIn, {
                provider: 'password',
                params: { email, password, flow: 'signIn' }
            });
            
            console.log('Sign in result:', result);
            
            // Store auth token if returned (check various possible structures)
            const token = result?.token || result?.tokens?.token;
            if (token) {
                localStorage.setItem('convex_auth_token', token);
                convex.setAuth(() => Promise.resolve(token));
            }
            
            // Redirect to dashboard on success
            window.location.href = '/dashboard';
        } catch (error: any) {
            console.error('Login error:', error);
            let message = 'Invalid email or password. Please try again.';
            if (error.message?.includes('InvalidAccountId')) {
                message = 'Account not found. Please register first.';
            }
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
            submitBtn.disabled = false;
            submitBtn.textContent = 'Sign In';
        }
    });
</script>

<style>
    .auth-page {
        min-height: calc(100vh - 56px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 80px 24px 48px;
        background: var(--bg-primary);
    }

    .auth-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 64px;
        max-width: 1100px;
        width: 100%;
    }

    .auth-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 48px;
    }

    .auth-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 8px;
        color: var(--text-primary);
    }

    .auth-header p {
        color: var(--text-secondary);
        margin-bottom: 32px;
    }

    .auth-providers {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 24px;
    }

    .provider-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 12px 24px;
        background: var(--bg-primary);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        color: var(--text-primary);
        font-size: 0.9375rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.15s ease;
    }

    .provider-button:hover {
        background: var(--bg-secondary);
        border-color: var(--accent);
        transform: translateY(-1px);
    }

    .auth-divider {
        position: relative;
        text-align: center;
        margin: 24px 0;
    }

    .auth-divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--border);
    }

    .auth-divider span {
        position: relative;
        display: inline-block;
        padding: 0 16px;
        background: var(--surface);
        color: var(--text-tertiary);
        font-size: 0.875rem;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .error-message {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
        padding: 12px 16px;
        border-radius: var(--radius-md);
        font-size: 0.875rem;
    }

    .form-options {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: -8px;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.875rem;
        color: var(--text-secondary);
        cursor: pointer;
    }

    .checkbox-label input[type="checkbox"] {
        width: 16px;
        height: 16px;
        cursor: pointer;
    }

    .forgot-link {
        font-size: 0.875rem;
        color: var(--accent);
        text-decoration: none;
    }

    .forgot-link:hover {
        text-decoration: underline;
    }

    .btn-block {
        width: 100%;
        margin-top: 8px;
    }

    .auth-footer {
        margin-top: 24px;
        text-align: center;
        padding-top: 24px;
        border-top: 1px solid var(--border);
    }

    .auth-footer p {
        color: var(--text-secondary);
        font-size: 0.9375rem;
    }

    .auth-footer a {
        color: var(--accent);
        text-decoration: none;
        font-weight: 500;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }

    .auth-benefits h2 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 32px;
        color: var(--text-primary);
    }

    .benefits-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .benefits-list li {
        display: flex;
        gap: 16px;
    }

    .benefits-list svg {
        flex-shrink: 0;
        color: var(--accent);
        margin-top: 4px;
    }

    .benefits-list h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 4px;
        color: var(--text-primary);
    }

    .benefits-list p {
        color: var(--text-secondary);
        line-height: 1.6;
    }

    @media (max-width: 900px) {
        .auth-container {
            grid-template-columns: 1fr;
            gap: 48px;
        }

        .auth-benefits {
            order: -1;
        }

        .auth-card {
            padding: 32px 24px;
        }
    }

    @media (max-width: 600px) {
        .auth-page {
            padding: 80px 16px 32px;
        }

        .form-options {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }
    }
</style>
