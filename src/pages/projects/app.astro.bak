    <style>
        .project-hero {
            padding: 10rem 2rem 6rem;
            position: relative;
            background: linear-gradient(135deg, #064e3b, #065f46);
            overflow: hidden;
            text-align: center;
        }

        .project-hero-content {
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .project-title-group {
            margin-bottom: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .project-tag {
            background: rgba(16, 185, 129, 0.15);
            color: #6ee7b7;
            padding: 0.4rem 1rem;
            border-radius: 100px;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .project-hero h1 {
            font-size: clamp(2.5rem, 6vw, 4.5rem);
            font-weight: 800;
            color: #fff;
            line-height: 1.1;
            margin: 0;
        }

        .project-subtitle {
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
            margin-bottom: 2.5rem;
        }

        .project-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            margin-top: 2rem;
        }

        .feature-card {
            background: #fff;
            padding: 2.5rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
            border: 1px solid #e5e7eb;
            transition: transform 0.2s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: #f0fdf4;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #10b981;
            margin-bottom: 1.5rem;
        }

        .feature-icon.green {
            background: #ecfdf5;
            color: #059669;
        }

        .feature-icon svg {
            width: 24px;
            height: 24px;
        }

        .feature-card h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            color: #1f2937;
        }

        .feature-card p {
            color: #6b7280;
            line-height: 1.6;
        }

        .alt-bg {
            background: #f9fafb;
        }

        .preview-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
            min-height: 85vh; /* Center vertically on screen */
        }

        .preview-list {
            margin-top: 2rem;
            list-style: none;
            padding: 0;
        }

        .preview-list li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            color: #4b5563;
        }

        .preview-list li::before {
            content: "âœ“";
            color: #10b981;
            font-weight: 800;
        }

        .android-device {
            width: 400px;
            height: 840px;
            background: #f1f5f9;
            border-radius: 46px;
            border: 14px solid #e2e8f0;
            margin: 0 auto;
            position: relative;
            overflow: hidden;
            box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.3);
            font-family: "Inter", system-ui, sans-serif;
        }

        .camera {
            position: absolute;
            top: 24px;
            left: 50%;
            transform: translateX(-50%);
            width: 14px;
            height: 14px;
            background: #94a3b8;
            border-radius: 50%;
            z-index: 20;
        }

        .screen {
            background: #020617; /* Dark navy background */
            height: 100%;
            width: 100%;
            padding: 50px 24px 24px;
            display: flex;
            flex-direction: column;
            color: #fff;
            position: relative;
        }

        .status-bar {
            position: absolute;
            top: 14px;
            left: 0;
            width: 100%;
            padding: 0 28px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            font-weight: 600;
            color: #fff;
            z-index: 10;
        }

        .status-icons {
            display: flex;
            gap: 6px;
        }

        .app-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 32px;
            margin-top: 10px;
        }

        .app-header h2 {
            font-size: 28px;
            font-weight: 700;
            margin: 0 0 6px;
            color: #fff;
        }

        .app-header p {
            color: #94a3b8;
            font-size: 14px;
            margin: 0;
        }

        .icon-btn {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: rgba(30, 41, 59, 0.5);
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #3b82f6;
            cursor: pointer;
        }

        /* Welcome Card */
        .welcome-card {
            background: #fff;
            border-radius: 20px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 32px;
            color: #0f172a;
        }

        .welcome-icon {
            width: 52px;
            height: 52px;
            background: #dbeafe;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #3b82f6;
            flex-shrink: 0;
